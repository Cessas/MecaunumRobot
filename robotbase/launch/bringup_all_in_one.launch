<launch>
<node pkg="rosserial_python" type="serial_node.py" name="ARDUINO1" args="/dev/ttyACM0" respawn="true" output="screen" >
</node>
<node pkg="rosserial_python" type="serial_node.py" name="ARDUINO2" args="/dev/ttyACM1" respawn="true" output="screen" />
    <node pkg="odometry_publisher" type="odometry_publisher" name="odometry_publisher" output="screen">
      <param name="~scale_x" value="0.0002" />
        <param name="~scale_y" value="0.0002" />
        <param name="~scale_th" value="0.0008" />
    </node>
<node pkg="tf" type="static_transform_publisher" name="baselink_laser_publisher" args="0 0 0 0 0 1 base_footprint base_link  100"/>
<node pkg="tf" type="static_transform_publisher" name="baselink" args="0 0 0 0 0 1 base_footprint base_imu_link  100"/>
 
 <arg name="node_name"             value="velocity_smoother"/>
  <arg name="nodelet_manager_name"  value="nodelet_manager"/>
  <arg name="config_file"           value="$(find robotbase)/config/velocity_smoother.yaml"/>
  <arg name="raw_cmd_vel_topic"     value="cmd_vel"/>
  <arg name="smooth_cmd_vel_topic"  value="smoother_cmd_vel"/>
  <arg name="robot_cmd_vel_topic"   value="robot_cmd_vel"/>
  <arg name="odom_topic"            value="odom_combined"/>
  
  <!-- nodelet manager -->
  <node pkg="nodelet" type="nodelet" name="$(arg nodelet_manager_name)" args="manager"/>
  
  <!-- velocity smoother -->
  <include file="$(find velocity_smoother)/launch/velocity_smoother.launch">
    <arg name="node_name"             value="$(arg node_name)"/>
    <arg name="nodelet_manager_name"  value="$(arg nodelet_manager_name)"/>
    <arg name="config_file"           value="$(arg config_file)"/>
    <arg name="raw_cmd_vel_topic"     value="$(arg raw_cmd_vel_topic)"/>
    <arg name="smooth_cmd_vel_topic"  value="$(arg smooth_cmd_vel_topic)"/>
    <arg name="robot_cmd_vel_topic"   value="$(arg robot_cmd_vel_topic)"/>
    <arg name="odom_topic"            value="$(arg odom_topic)"/>
  </include>
<node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf">
  <param name="output_frame" value="odom_combined"/>
  <param name="base_footprint_frame" value="base_footprint"/>
  <param name="freq" value="50.0"/>
<param name="debug" value="true" />
  <param name="sensor_timeout" value="1.0"/>  
  <param name="odom_used" value="true"/>
  <param name="imu_used" value="true"/>
  <param name="vo_used" value="false"/>
  <remap from="imu_data" to="imu" />
</node>
  <arg name="razor_config_file" default="$(find razor_imu_9dof)/config/my_razor.yaml"/>
  <node pkg="razor_imu_9dof" type="imu_node.py" name="imu_node" output="screen">
    <rosparam file="$(arg razor_config_file)" command="load"/>
  </node>

</launch>
