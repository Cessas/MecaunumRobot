
<launch>
<param name="use_sim_time" value="false" />
<arg name="map" default="map.yaml" />
<arg name="port" default="ttyUSB0" />

  <node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
  <param name="serial_port"         type="string" value="/dev/$(arg port)"/>  
  <param name="serial_baudrate"     type="int"    value="115200"/>
  <param name="frame_id"            type="string" value="laser"/>
  <param name="inverted"            type="bool"   value="false"/>
  <param name="angle_compensate"    type="bool"   value="true"/>
  </node>
<node pkg="map_server" type="map_server" name="map_server" args="/home/zmr/$(arg map)" />
<include file="$(find robotbase)/move_base_config/amcl_node.xml" />
<include file="$(find robotbase)/launch/move_base.launch" />
<node pkg="tf" type="static_transform_publisher" name="odom_map_broadcaster" args="0 0 0 0 0 0 /map /odom 100" />
<node pkg="rviz" type="rviz" name="rviz" />

</launch>
